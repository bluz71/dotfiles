[user]
    name  = Dennis B
    email = bluz71@users.noreply.github.com
[push]
    default = simple
[core]
    autocrlf       = input
    pager          = delta
    untrackedCache = true
[color]
    ui = auto
[diff]
    tool       = meld
    algorithm  = histogram
    colorMoved = plain
[pull]
    rebase = true
[merge]
    tool = meld
[difftool]
    prompt = false
[difftool "vd"]
    cmd = nvim -d "$LOCAL" "$REMOTE"
[mergetool]
    keepBackup = false
[advice]
    waitingForEditor = false
[delta]
    features     = styles
    syntax-theme = none
[delta "styles"]
    commit-style                 = 3          # yellow
    file-style                   = 11         # pale yellow
    file-decoration-style        = 11 ul ol
    hunk-header-style            = 253        # white
    hunk-header-decoration-style = 12 box     # pale blue
    minus-style                  = 1          # red
    minus-emph-style             = 1 reverse
    plus-style                   = 2          # green
    plus-emph-style              = 2 reverse
    zero-style                   = auto
[help]
    format = html
#[feature]
#    manyFiles = true
[alias]
    # add
    aa = add .
    sg = !git add . -N && git add -p
    # reset
    unadd = reset HEAD
    # commit
    ci    = commit --verbose
    unci  = reset --soft HEAD~1
    amend = commit --amend
    # restore
    rs  = restore
    rss = restore --source
    # branch
    bb  = bvv # Note, bvv is a custom subcommand, see the 'git-bvv' file.
    bba = bvv --all
    bd  = branch -d
    bD  = branch -D
    # switch
    sw  = switch
    swc = switch -c
    # checkout
    co = checkout
    # diff
    di   = diff
    dip = !sh -c 'git di $1~1..$1' -
    dis  = diff --staged
    mdi  = difftool
    mdip = !sh -c 'git difftool $1~1..$1' -
    mdis = difftool --staged
    vdi  = difftool -t vd
    vdip = !sh -c 'git difftool -t vd $1~1..$1' -
    vdis = difftool -t vd --staged
    # log: #e3c78a (yellow), #ff5454 (red), #42cf89 (green), #80a0ff (blue)
    ll  = "log --graph --date=human --format='%C(#e3c78a)%h%C(#ff5454)%d%C(reset) - %C(#42cf89)(%ad)%C(reset) %s %C(#80a0ff){%an}%C(reset)'"
    llm = !git ll master..HEAD
    llu = !git ll @{upstream}..HEAD
    lld = !git ll HEAD..@{upstream}
    # reflog
    rl = reflog
    # show
    sh = show
    # fetch
    fe  = fetch
    fea = fetch --all --prune
    # merge
    mg   = merge --ff-only
    mgs  = merge --ff-only --squash
    unmg = reset --merge ORIG_HEAD
    mgt  = mergetool
    # rebase
    rb  = rebase
    rbc = rebase --continue
    rbs = rebase --skip
    # push / pull
    ps = push
    pl = pull
    # remote
    rr  = remote -v
    rro = remote show origin
    rru = remote show upstream
    # remote branch
    bop = push -u origin
    bod = push origin -d
    # stash
    sa = !sh -c 'git stash apply stash@{$1}' -
    sd = !sh -c 'git stash drop stash@{$1}' -
    si = !sh -c 'git stash show -p stash@{$1}' -
    sl = stash list
    sp = stash pop
    ss = stash save --include-untracked
    # bisect
    bss = bisect start
    bsb = bisect bad
    bsg = bisect good
    bsr = bisect reset
    # misc
    cloc = !cloc --vcs=git
