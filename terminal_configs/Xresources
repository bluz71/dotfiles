! Set up xterm colors and characterics.
!
! Note to reload Xresources the following is required:
!   % xrdb -merge .Xresources

! Dim gray (usually defined as 'Black')
xterm-moonfly*color0: #323437

! Red
xterm-moonfly*color1: #ff5454

! Green
xterm-moonfly*color2: #8cc85f

! Yellow
xterm-moonfly*color3: #e3c78a

! Blue
xterm-moonfly*color4: #80a0ff

! Violet (usually defined as 'Purple')
xterm-moonfly*color5: #cf87e8

! Turquoise (usually defined as 'Cyan')
xterm-moonfly*color6: #79dac8

! Orange (usally defined as 'White')
xterm-moonfly*color7: #de935f

! Coral (usually defined as 'Bold Black')
xterm-moonfly*color8: #f09479

! Crimson (usally defined as 'Bold Red')
xterm-moonfly*color9: #ff5189

! Emerald (usually defined as 'Bold Green')
xterm-moonfly*color10: #36c692

! Khaki (usually defined as 'Bold Yellow')
xterm-moonfly*color11: #c2c292

! Sky (usually defined as 'Bold Blue')
xterm-moonfly*color12: #74b2ff

! Purple (usually defined as 'Bold Purple')
xterm-moonfly*color13: #ae81ff

! Lime (usually defined as 'Bold Cyan')
xterm-moonfly*color14: #85dc85

! Cranberry (usually defined as 'Bold White')
xterm-moonfly*color15: #e2637f

xterm-moonfly*allowTitleOps: false
xterm-moonfly*background: #080808
xterm-moonfly*charClass: 33:48,35:48,37:48,42:48,45-47:48,58:48,61:48,63-64:48,95:48,126:48
xterm-moonfly*colorBD: #eeeeee
xterm-moonfly*colorBDMode: on
xterm-moonfly*colorUL: #36c692
xterm-moonfly*colorULMode: on
xterm-moonfly*cursorColor: #9e9e9e
xterm-moonfly*cutNewline: false
xterm-moonfly*cutToBeginningOfLine: false
xterm-moonfly*faceName: Iosevka Custom
xterm-moonfly*faceSize: 12
xterm-moonfly*fastScroll: true
